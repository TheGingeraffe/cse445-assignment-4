      <State>AZ</State>
      <Zip>85281</Zip>
      <NearestAirport>Phoenix Sky Harbor International Airport</NearestAirport>
    </Address>
  </Hotel>

  <!-- (3) missing Phone -->
  <Hotel HotelID="H003" Rating="4.4">
    <Name>Canopy by Hilton Tempe Downtown</Name>
    <Address>
      <Number>108</Number>
      <Street>E University Dr</Street>
