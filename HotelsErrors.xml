      <City>Tempe</City>
      <State>AZ</State>
      <Zip>85281</Zip>
      <NearestAirport>Phoenix Sky Harbor International Airport</NearestAirport>
    </Address>
  </Hotel>

  <!-- (2) missing required attribute HotelID -->
  <Hotel Rating="4.6">
    <Name>Tempe Mission Palms Hotel</Name>
    <Phone>480-894-1400</Phone>
    <Address>
      <Number>60</Number>
      <Street>E 5th St</Street>
